{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowAccessToBucketA",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::${BUCKET_NAME_A}/*"
        },
        {
            "Sid": "AllowAccessToBucketB",
            "Effect": "Allow",
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::${BUCKET_NAME_B}/*"
        }
    ]
}